font                    pango:monospace 10
set $base               #24273a
set $text               #cad3f5
set $purple             #af87ff
set $red                #ed8796
set $grey               #5b6078
set $crust              #303030

bar {
    position                    top
    status_command              i3status
    tray_output                 DP-0
    separator_symbol            " "
    colors {
        background              $base
        statusline              $text
        focused_statusline      $text
        focused_separator       $base

        # target                border bg        text
        focused_workspace       $base  $purple   $crust
        active_workspace        $base  $grey     $text
        inactive_workspace      $base  $base     $text
        urgent_workspace        $base  $red      $crust
    }
}

# Remove title bar
default_border                  pixel 0
default_floating_border         pixel 0

# Scale monitors
output HDMI-A-1 scale 2
output DP-3 scale 2

# Background
output "*" bg ~/Pictures/wallpaper.png fill
